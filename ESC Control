#include <Servo.h>

#define ESC_PIN 9  // ESC 핀

Servo esc;

void setup() {
    esc.attach(ESC_PIN);
    initializeESC();
}

void loop() {
    esc.writeMicroseconds(1500);  // 중간 속도
    delay(2000);

    esc.writeMicroseconds(1000);  // 정지
    delay(2000);
}

void initializeESC() {
    esc.writeMicroseconds(1000);  // 초기화 신호 (정지)
    delay(3000);  // 3초 대기
}
